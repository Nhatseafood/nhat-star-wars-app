<!doctype html>
<html lang="en">
  <head>
   <% include partials/head.ejs %>
  </head>
  <body>

    <% include partials/header.ejs %>
      <div id="hero-image">
          <h1 id="hero-title"><%= title %></h1>
      </div>

      <div id="posters-wrapper" class="content-padding clearfix">
            <% for (var i =0; i <moviePosters.length; i++) { %>
                <div class="poster">
                <a href="/star_wars_episode/<%= movies[i].episode_number %>">

                      <img src ="/images/<%= moviePosters[i] %>" class="img-responsive">

                      <div class="poster-info-overlay">
                      <h3> <%= movies[i].title %>  </h3>
                      <h4>View More <i class="fa fa-arrow-right"></i></h4>
                  </div>
                </a>


        </div>
            <% } %>
      </div>
   






    <% include partials/scripts.ejs %>
  </body>
</html>